<!-- One -->
    <section id="one" class="main style2 right dark fullscreen">
	    <div class="content box style2" id="one-text">
			<header>
				<h2><%= @food_name %></h2>
			<header>
				<div class="txt-box">
					<p>Your input has found this recipe for you. The recipe can be found by clicking on the image provided.</p>
				</div>
				<div id="food-img-holder">
					<a href = "<%= @food_link%>" target="_blank"><img src = "<%= @food_img%>" height= "280" width= "250" alt = "Error"></a>
				</div>
		</div>
		<a href="#two" class="button style2 down anchored">Next</a>
	</section>

<!-- Two -->
	<section id="two" class="main style2 left dark fullscreen">
		<div class="content box style2" id="two-text">
			<header>
				<h2><%=@movie_type.capitalize%></h2>
			</header>
			<div class="text-bx">
				<p>Your search has returned <strong><%=@movie_title%></strong>! Click on the image provided on the right to be taken to its IMDB page. </p>
			</div>
			<div class = "img-holder">
				<a href = "https://www.imdb.com/title/<%= @movie_id %>/" target="_blank"><img src = "<%= @movie_img%>"  height= "280" width= "200" alt = "Error"></a>
			</div>
		</div>
		
			<a href="#three" class="button style2 down anchored">Next</a>
	</section>
	
